<%- include('../partials/html-head') %>
<link rel="stylesheet" href="stylesheets/tickets.css">
<%- include('../partials/nav') %>
<main class="container pt-4">
  <h1 class="mb-3">Hey There, <%= user.profile.name %>!</h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
  <% } %>
  <a href="/tickets/new" class="w-100 min-vh-10 d-flex justify-content-center text-decoration-none"><button class="btn btn-outline-light w-50 m-5 fs-2">Pump Gas</button></a>
  <h3>Remaining Weekly Allowance</h3>
  <div class="progress w-90">
    <div class="progress-bar w-75" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <h4>$<%= profile.currentBalance.amount %></h4>
  <% if (tickets.length) { %>
    <h2>Previous Tickets</h2>
    <ul class="list-group">
      <% tickets.forEach(ticket => { %>
        <a href="/tickets/<%= ticket._id %>" class="text-light"><li class="p-3 list-group-item"><span class="badge bg-success rounded-pill"><%= ticket.ticketNumber %></span></a> <%= ticket.createdAt.toLocaleString() %></li>
      <% }) %> 
    </ul>
  <% } %>
  <div class="button-section">
    
  </div>


</main>



<%- include('../partials/footer') %>