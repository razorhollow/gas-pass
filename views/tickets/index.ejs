<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<main>
  <h1>Hey There, <%= user.profile.name %>!</h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
  <% } %>
  <a href="/tickets/new"><button class="btn btn-primary">Pump Gas</button></a>
  <h3>Remaining Weekly Allowance</h3>
  <div class="progress w-90">
    <div class="progress-bar w-75" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <h4>$59.95</h4>
  <% if (tickets.length) { %>
    <h2>Previous Tickets</h2>
    <ul>
      <% tickets.forEach(ticket => { %>
        <a href="/tickets/<%= ticket._id %>"><li><%= ticket.ticketNumber %></a> | <%= ticket.createdAt.toLocaleString() %></li>
      <% }) %> 
    </ul>
  <% } %>
</main>



<%- include('../partials/footer') %>